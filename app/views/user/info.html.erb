<div class="container">
  <div class="row">
    <div class="col-sm-offset-4 col-sm-4">
    <div class="avatar text-center">
      <img src="<%= @user.avatar_url %>">
    </div>
    <p class="text-center">
      <a target="_blank" href="https://github.com/<%= @user.name %>">
        <span class="fa fa-github"> <%= @user.name %>
      </a>
      <a href="/user/signout">
        <span class="fa fa-sign-out">
        Sign out
      </a>
    </p>
    </div>
  </div>
</div>